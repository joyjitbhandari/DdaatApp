<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DdaatApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_bg</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_bg</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--For text button-->
    <style name="MyTextButtonStyle" parent="@style/Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/blue_bg</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/dm_sans_medium_500</item>
    </style>

    <!--heading-->
    <style name="heading">
        <item name="android:textSize">30sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <!--For choice chip-->
    <style name="MyChoiceChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Chip background color selector -->
        <item name="chipBackgroundColor">@color/choice_chip_background_color</item>
        <!-- Border color -->
        <item name="chipStrokeColor">@color/choice_chip_stroke_color</item>
        <!-- Chip text color selector -->
        <item name="android:textColor">@color/choice_chip_text_color</item>
        <!-- Chip close icon color selector -->
    </style>

    <!--My searchView-->
    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:background">@drawable/round_25_black_bg</item>
        <item name= "android:queryBackground">@color/float_transparent</item>
    </style>

    <!--My Image shapes  -->
    <!--Round Video Thumbnail-->
    <style name="MyVideoImageShape" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>
    <!--Circle Profile-->
    <style name="MyProfileImageShape" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--SemiCircle Session-->
    <style name="MySessionsImageShape" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15%</item>
        <item name="cornerSizeTopRight">15%</item>
    </style>

</resources>