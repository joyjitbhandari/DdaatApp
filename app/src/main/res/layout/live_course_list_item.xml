<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="130dp"
    android:background="@android:color/transparent">

<!--Live Image-->

    <!--Live Symbol-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/liveCourseImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/live_course_sample_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:scaleType="fitXY"
        app:shapeAppearance="@style/MyVideoImageShape" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_Live"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:backgroundTint="@color/live_bg"
        android:text="Live"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:textAlignment="center"
        android:textColor="@color/light_grey"
        android:textSize="10sp"
        app:icon="@drawable/ic_live_dot"
        app:iconGravity="textStart"
        app:iconSize="@dimen/_8dp"
        app:iconTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/liveCourseImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/liveCourseImage"
        app:layout_constraintVertical_bias="0.0" />

    <!--Live course Heading-->
    <TextView
        android:id="@+id/txt_liveCourseHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25dp"
        android:background="@color/float_transparent"
        android:fontFamily="@font/dm_sans_bold700"
        android:text="Courses Name"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/liveCourseImage"
        app:layout_constraintEnd_toEndOf="@+id/liveCourseImage"
        app:layout_constraintStart_toStartOf="@+id/liveCourseImage"
        app:layout_constraintTop_toTopOf="@+id/liveCourseImage" />


</androidx.constraintlayout.widget.ConstraintLayout>